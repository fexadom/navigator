{
  //Custom scan trait
  "_scan": {
    "commands": {
      "start": {
        "minimalRole": "user",
        "parameters": {
          "duration": {
            "type": "integer",
            "minimum": 500,
            "maximum": 10000
          },
          "interval": {
            "type": "integer",
            "minimum": 1000,
            "maximum": 10000
          }
        }
      },
      "stop": {
        "minimalRole": "user"
      }
    },
    "state": {
      "state": {
        "isRequired": true,
        "type": "string",
        "enum": [ "on", "off" ]
      },
      "duration": {
        "type": "integer"
      },
      "interval": {
        "type": "integer"
      }
    }
  },//_scan trait

  //Custom location trait
  "_location": {
    "state": {
      "location": {
        "type": "string"
      },
     "mode": {
        "isRequired": true,
        "type": "string",
        "enum": [ "find", "locate" ]
     }
    },
    "commands": {
        "change_mode": {
          "type": "string",
          "enum": ["find", "locate" ]
        }
    }
  }//_location trait
}
